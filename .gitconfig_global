[core]
    excludesfile = ~/.dotfiles/.gitignore
    editor = code --wait
    autocrlf = input
    
[user]
    name = Ernesto Garcia
    email = ernesto.garcia@masorange.es
    
[push]
    default = simple
    
[pull]
    rebase = false
    
[init]
    defaultBranch = main
    
[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    d = diff
    dc = diff --cached
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    lg = log --oneline --graph --decorate
    lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lgme = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    type = cat-file -t
    dump = cat-file -p
    
[color]
    ui = auto
    d = diff
    dc = diff --cached
    
[color]
    ui = auto
